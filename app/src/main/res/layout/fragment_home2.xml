<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.push_it.isi.push_it.fragment_profil_user.Home">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/accueil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accueil"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textSize="40dp" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            custom:donut_inner_bottom_text="Chargement..."
            custom:donut_max="100"
            custom:donut_progress="0"
            custom:donut_text_size="50dp"/>


        <TextView
            android:id="@+id/pseudoInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objectifs:"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Push-Up Restants: "
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/idObjectifHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Push-Up Totaux: "
                android:textAlignment="center"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/idNbPushUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
