<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_authentification__user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".View_Activity.authentification.authentification_User">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:layout_marginTop="0px"
        android:orientation="vertical"
        android:padding="0px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Formulaire d'inscription:"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="#adaeb3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c1c1f">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail2" />

            <EditText
                android:id="@+id/courrielIns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Courriel"
                android:textColor="#adaeb3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c1c1f">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/username" />

            <EditText
                android:id="@+id/pseudoIns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choisissez un nom d'utilisateur"
                android:textColor="#adaeb3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c1c1f">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lock2" />

            <EditText
                android:id="@+id/mdpIns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choisisessz un mot de passe"
                android:inputType="textPassword"
                android:textColor="#adaeb3" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c1c1f">

            <ImageView
                android:paddingTop="10dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_push" />

            <EditText
                android:id="@+id/dateIns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Push-Up Par Semaine ?"
                android:inputType="date"
                android:textColor="#adaeb3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c1c1f">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sexe" />

            <EditText
                android:id="@+id/sexeIns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sexe"
                android:textColor="#adaeb3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/addUserButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#0078d7"
                android:hint="S'INSCRIRE"
                android:textColor="#fff"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="En vous inscrivant, vous acceptez que l'application Push-It ne sera pas responsable des accidents causer par l'application. Merci de votre comprehension "
                android:textColor="#ffff" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_voir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification BD" />


        <LinearLayout
            android:id="@+id/ll_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
